<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/service_card_layoout_marginBottom"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/service_card_margin"
        app:cardCornerRadius="@dimen/cardView_radius"
        app:cardElevation="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/service_card_layout_padding"
            android:elevation="4dp">

            <ImageView
                android:layout_width="@dimen/service_card_logo_width"
                android:layout_height="@dimen/service_card_logo_height"
                android:id="@+id/service_logo"
                android:scaleType="fitCenter"
                android:paddingTop="@dimen/service_card_logo_paddingTop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/service_name"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/service_logo"
                android:padding="@dimen/service_card_textView_padding"
                android:textSize="@dimen/biggest_textSize"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/company_name"
                android:paddingLeft="@dimen/service_card_textView_paddingLeft"
                android:paddingRight="@dimen/service_card_textView_paddingRight"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/service_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/service_description"
                android:padding="@dimen/service_card_textView_padding"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/company_name"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
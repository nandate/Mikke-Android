<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:id="@+id/full_service_logo"
            android:scaleType="fitCenter"
            android:paddingTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/full_service_name"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/full_service_logo"
            android:padding="16dp"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/full_company_name"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/full_service_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/full_service_description"
            android:padding="16dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/full_company_name"/>


        <Button
            android:text="お気に入り解除"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:id="@+id/remove_favrite_button"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_white"
            android:layout_below="@+id/full_service_description"/>


        <Button
            android:text="もっと詳しく"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:id="@+id/button4"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/remove_favrite_button"
            android:background="@drawable/gradation_primal_radius"
            android:textColor="@android:color/white"
            android:layout_marginBottom="40dp"/>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/favorite_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mypage_recycleView_height"
            android:padding="@dimen/mypage_recycleView_padding"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradation_primal"
            android:layout_above="@+id/favorite_recyclerView"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/user_icon"
                android:textSize="@dimen/title_textSize"
                android:layout_marginTop="@dimen/mypage_recycleView_marginTop"
                android:layout_marginBottom="@dimen/mypage_name_marginBottom"
                android:textColor="@android:color/white" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_icon"
                android:layout_width="@dimen/mypage_circleView_width"
                android:layout_height="@dimen/mypage_circleView_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mypage_circleView_marginTop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#fafafa">

                <TextView
                    android:id="@+id/fav_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="あなたのミッケ！"
                    android:textSize="@dimen/normal_textSize"
                    android:textColor="#757575"
                    android:layout_below="@+id/user_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/mypage_textView_marginTop"
                    android:layout_marginBottom="@dimen/mypage_textView_marginBottom"/>
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
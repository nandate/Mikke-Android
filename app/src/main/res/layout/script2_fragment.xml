<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@color/colorPrimary"
            android:id="@+id/imageView4" />

        <Button
            android:id="@+id/script2_next_button"
            android:layout_width="@dimen/button_layout_width"
            android:layout_height="@dimen/button_layout_height"
            android:background="@drawable/button"
            android:text="次へ"
            android:textSize="@dimen/normal_textSize"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/script2_description"
            android:layout_alignStart="@+id/script2_description"
            android:layout_marginBottom="@dimen/script_button_marginBottom"
            android:layout_alignRight="@+id/script2_description"
            android:layout_alignEnd="@+id/script2_description" />

        <TextView
            android:text="コンシェルジュ機能"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_script_marginTop"
            android:id="@+id/textView4"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/script_2_pic2_height"
            app:srcCompat="@drawable/pic2"
            android:id="@+id/imageView2"
            android:layout_above="@+id/script2_description"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/script_2_marginBottom" />

        <TextView
            android:text="チャットで聞いてみてください。今探しているアプリ・Webサービスをご提案します。"
            android:layout_width="@dimen/button_layout_width"
            android:layout_height="wrap_content"
            android:id="@+id/script2_description"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/normal_textSize"
            android:textAlignment="center"
            android:layout_marginBottom="26dp"
            android:layout_above="@+id/script2_next_button"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>
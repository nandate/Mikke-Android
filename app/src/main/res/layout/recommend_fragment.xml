<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/recommend_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/recommend_fragment_layout_height"
            android:layout_weight="0.5"
            android:background="#00BCD4"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="ミッケ!"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textSize"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/dislike_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/recommend_fragment_layout_height"
            android:layout_toRightOf="@+id/like_button"
            android:layout_weight="0.5"
            android:background="#E91E63"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="興味なし"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textSize"
            android:textStyle="bold" />

    </LinearLayout>

    <com.mindorks.placeholderview.SwipePlaceHolderView
        android:id="@+id/recommend_swipeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.mindorks.placeholderview.SwipePlaceHolderView>


</FrameLayout>
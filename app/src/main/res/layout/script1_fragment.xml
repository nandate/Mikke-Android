<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/script1_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/script1_back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/dark_grass"
            android:id="@+id/imageView3" />

        <TextView
            android:text="アプリ・Webサービス情報配信ツール"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@android:color/white"
            android:layout_marginTop="70dp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/circl"
            android:id="@+id/imageView"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <ImageView
            android:id="@+id/script1_logo"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:src="@drawable/logo1"
            android:layout_alignTop="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp" />

        <TextView
            android:id="@+id/script1_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="「Mikke!」はあなたがまだ知らないだけど絶対に使いたくなるアプリ・Webサービス情報を毎日3つずつお届けします。使えば使うほどに新たな発見とワクワクが待っています。"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:layout_above="@+id/script1_next_button"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />

        <Button
            android:id="@+id/script1_next_button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/gradation_border"
            android:text="次へ"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:paddingTop="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/script1_description"
            android:layout_alignStart="@+id/script1_description"
            android:layout_marginBottom="40dp"
            android:layout_alignRight="@+id/script1_description"
            android:layout_alignEnd="@+id/script1_description" />

    </RelativeLayout>


</LinearLayout>
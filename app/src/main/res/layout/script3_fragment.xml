<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/script3_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/script3_back"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageView
            android:id="@+id/heart_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/heart"
            android:layout_marginBottom="29dp"
            android:layout_above="@+id/script3_description"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/script3_description"
            android:text="毎朝7時にあなたの為だけに\n3サービスをご紹介します。\nこんなサービスがあったのか\nを毎日感じられます！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/script3_next_button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/gradation_primal"
            android:text="はじめよう"
            android:layout_marginBottom="40dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:paddingTop="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>